<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Main theme colors -->
        <!-- your app branding color for the app bar -->
        <item name="android:colorPrimary">@android:color/holo_red_light</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="android:statusBarColor">@android:color/holo_red_dark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@android:color/darker_gray</item>
    </style>

    <style name="Suggestions" parent="@android:style/Widget.Holo.AutoCompleteTextView">
        <item name="android:popupBackground">@android:drawable/dialog_holo_dark_frame</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
        <item name="android:dropDownHorizontalOffset">-5dp</item>
    </style>

    <style name="Buttons">
        <item name="android:layout_width">@dimen/weather_icon_Height</item>
        <item name="android:layout_height">@dimen/weather_icon_Height</item>
        <item name="android:background">@drawable/btn_digit</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:background">@android:color/holo_blue_dark</item>
    </style>

</resources>